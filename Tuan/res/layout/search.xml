<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/ump_btn_payagain_normal"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/bar_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/bar_im01"
                android:layout_width="27dip"
                android:layout_height="match_parent"
                android:src="@drawable/ic_comment_photo_browser_back" />

            <ImageView
                android:id="@+id/bar_im02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_launch" />

            
        </LinearLayout>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.52"
            android:background="@color/white"
            android:drawableLeft="@drawable/abc_ic_search_api_holo_light"
            android:paddingLeft="5dp"
            android:hint="@string/meishi_tv10"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/bar_img04"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:src="@drawable/ic_search" />

    </LinearLayout>

</LinearLayout>