<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.weather.MainActivity" >

     <ImageView 
         android:id="@+id/refresh_img"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content" 
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp"
         android:background="@drawable/pb_bg"        
         />
     <ImageView 
         android:id="@+id/search_img"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:background="@drawable/search"         
         />
     <LinearLayout 
         android:id="@+id/city_mp_layout"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:orientation="vertical"
         android:gravity="center_horizontal"         
         >
         <TextView 
             android:id="@+id/city_tv"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="26sp"
             android:textColor="@android:color/white"
             android:text="北京"
             />
         <TextView 
             android:id="@+id/pm_tv"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="18sp"             
             android:textColor="@android:color/white"
             android:text="PM:123 严重污染"             
             />
         <View 
             android:id="@+id/pm_state_color_v"
             android:layout_height="4dp"
             android:layout_width="match_parent"
             android:background="@android:color/holo_orange_light"
        />
         <TextView 
             android:id="@+id/network_error_tv"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="16sp"
             android:textColor="#ff0000"
             
          />
     </LinearLayout>
     <RelativeLayout 
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginTop="120dp"
         android:layout_marginLeft="10dp"         
         >
         <TextView 
             android:id="@+id/temperature_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="50sp"
             android:textColor="@android:color/white"
             android:text="38℃"
             />
         <TextView 
             android:id="@+id/weather_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/temperature_tv"
             android:layout_alignBottom="@+id/temperature_tv"
             android:textSize="20sp"
             android:textColor="#ffffff"
             android:text="晴 南风 5~6级"       
             />
       <TextView 
           android:id="@+id/date_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:layout_marginTop="20dp"          
           android:layout_below="@+id/temperature_tv"
           android:textSize="20sp"
           android:textColor="#ffffff"
           android:text="2016年6月30日"
           />
         
     </RelativeLayout>
     <HorizontalScrollView 
         android:id="@+id/futureday_weather_scr"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         >
         <LinearLayout 
             android:id="@+id/futureday_weather_layout"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:orientation="horizontal"
             >
             
         </LinearLayout>
     </HorizontalScrollView>
</RelativeLayout>
