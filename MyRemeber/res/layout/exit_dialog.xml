<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:gravity="center"
    android:id="@+id/layout"
  xmlns:android="http://schemas.android.com/apk/res/android">
  
  
    
    <FrameLayout android:layout_gravity="center_vertical"
        android:id="@+id/body" 
       
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:minHeight="100.0dip">
        
        <TextView android:textSize="18.0sp" 
            android:textColor="#000000" 
         	android:layout_gravity="center_vertical"
            android:id="@+id/exit_dialog_message" 
            android:paddingLeft="60.0dip" 
            android:paddingRight="15.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            />
    </FrameLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="70.0dip"
        android:layout_gravity="center_vertical">
        
        <Button android:textColor="#ff211300" 
                android:gravity="center" 
                android:id="@+id/exit_dialog_sure" 
                android:layout_width="98.0dip" 
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.0dip" 
                android:layout_marginRight="24.0dip" 
                android:text="@string/ok" 
                android:layout_alignParentLeft="true" 
                android:layout_centerVertical="true" 
                />
            
            <Button android:textColor="#ff211300" 
                android:id="@+id/exit_dialog_cancel" 
                android:layout_width="98.0dip" 
                 android:layout_height="wrap_content"
                android:layout_marginLeft="24.0dip" 
                android:layout_marginRight="24.0dip" 
                android:text="@string/cancel" 
                android:layout_alignParentRight="true" 
                android:layout_centerVertical="true" 
                 />
            
    </RelativeLayout>
</LinearLayout>
